<phpunit
        bootstrap="../vendor/autoload.php"
        strict="true"
        colors="true">
    <testsuites>
        <testsuite name="dic">
            <directory suffix="Test.php">./unit</directory>
            <directory suffix="Test.php">./integration</directory>
        </testsuite>
    </testsuites>
    <filter>
        <blacklist>
            <directory>./assets</directory>
        </blacklist>
    </filter>
    <php>
        <ini name="memory_limit" value="64M" />
    </php>
</phpunit>